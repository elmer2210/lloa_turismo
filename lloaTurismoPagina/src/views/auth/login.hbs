<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Registro de Usuario</h3>
                </div>
                <div class="card-body">
                    <form action="/signin" method="POST">
                        <div class="mb-3">
                            <label for="" class="form-labe">Usuario</label>
                            <input type="text" class="form-control" name="user_name" placeholder="exampleName1234">
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-labe">Contraseña</label>
                            <input type="password" class="form-control" name="password" placeholder="Contraseña">
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success btn-block">
                                Login
                            </button>
                        </div>
                    </form>
                    <p>No tienes una cuenta, <a href="/signup">Create una</a></p>
                </div>
            </div>
        </div>
    </div>
</div>