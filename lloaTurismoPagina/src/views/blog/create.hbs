<!--BlogÂ´s CSS-->
<link rel="stylesheet" href="/css/blog.css">

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <img class="card-img-top" src="holder.js/100x180/" alt="">
                <div class="card-body">
                    <form action="/blog/add" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="" class="form-label">Titulo</label>
                            <input type="text" name="title" id="" class="form-control" placeholder="Titulo del blog" autofocus>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Resumen</label>
                            <textarea type="text" name="resumen" id="" class="form-control" placeholder="Resumen del contenido" rows="2" ></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Conternido</label>
                            <textarea type="text" name="text" id="" class="form-control" placeholder="Contenido del blog" rows="3" ></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="" class="form-label">Photo</label>
                            <input type="file" name="image" id="" class="form-control" placeholder="Eleccione un imagen">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-block">
                              Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>