<div class="container">
    <h1 class="text-center display-4 my-4">Videos LLoa</h1>
    <div class="row">
        <h6 class="my-4"><a href="/video/add" class="link-success">Cargar un video nuevo</a></h6>
        {{#each videos}}
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{title}}</h5>
                        <video src="/img/img_uploads/{{file}}" width="100%" controls loop ></video>
                        <p class="card-text">{{description}}</p>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col">
                                <a href="/video/edit/{{id}}" class="btn btn-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/video/delete/{{id}}" class="btn btn-danger ">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">No existe registro a√∫n</h4>
                </div>
                <a href="/video/add" class="btn btn-link">Subir un video</a>
            </div>
        {{/each}}
    </div>
</div>