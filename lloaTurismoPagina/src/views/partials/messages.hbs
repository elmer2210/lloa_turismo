{{#if success}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    {{success}}
                </div>
            </div>
        </div>
    </div>
{{/if}}

{{#if message}}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    {{message}}
                </div>
            </div>
        </div>
    </div>
{{/if}}